@{
	Layout = null;
}

<div id="quotesGetterApp">
	<div>

		<h4>Рынок</h4>
		<form class="row g-3">
			<div class="col-md-8">
				<select class="form-select form-select-lg" v-model="currentMarketName">
					<option disabled value="">Выбор рынка</option>
					<option v-for="item in markets.map(x=>x.marketName)">
						{{item}}
					</option>
				</select>
			</div>

			<div class="col-md-1">
				<button type="button" class="btn btn-primary" data-bs-toggle="modal"
					data-bs-target="#addMarketModal">Добавить</button>
			</div>

			<div class="col-md-1" v-if="currentMarketName?.length > 0">
				<button type="button" class="btn btn-primary" data-bs-toggle="modal"
					data-bs-target="#deleteMarketModal">Удалить</button>
			</div>
		</form>

		<h4>Инструмент</h4>
		<form class="row g-3">
			<div class="col-md-8">
				<select class="form-select form-select-lg" v-model="currentTickerName">
					<option disabled value="">Выбор инструмента</option>
					<option v-for="item in currentMarketTickers">
						{{item}}
					</option>
				</select>
			</div>

			<div class="col-md-1" v-if="currentMarketName?.length > 0">
				<button type="button" class="btn btn-primary" data-bs-toggle="modal"
					data-bs-target="#addTickerModal">Добавить</button>
			</div>

			<div class="col-md-1" v-if="currentTickerName?.length > 0">
				<button type="button" class="btn btn-primary" data-bs-toggle="modal"
					data-bs-target="#deleteTickerModal">Удалить</button>
			</div>
		</form>

		<template v-if="currentTickerName?.length > 0">
			<ul class="nav nav-tabs" id="myTab" role="tablist">
				<li class="nav-item">
					<button class="nav-link" data-bs-toggle="tab" data-bs-target="#tickerInfoTab" type="button"
						role="tab" aria-selected="false">Информация об инструменте</button>
				</li>
				<li class="nav-item">
					<button class="nav-link" data-bs-toggle="tab" data-bs-target="#quotesInfoTab" type="button"
						role="tab" aria-selected="false">Информация о котировках</button>
				</li>
				<li class="nav-item">
					<button class="nav-link" data-bs-toggle="tab" data-bs-target="#quotesProviderTab" type="button"
						role="tab" aria-selected="false">Источник котировок</button>
				</li>
				<li class="nav-item">
					<button class="nav-link" data-bs-toggle="tab" data-bs-target="#loadFromFileTab" type="button"
						role="tab" aria-selected="false">Загрузка котировок из файла</button>
				</li>
			</ul>
			<div class="tab-content" id="myTabContent">
				<div class="tab-pane fade container border" id="tickerInfoTab" role="tabpanel">
					<div v-for="(item, index) in currentTickerInfo?.properties">
						<label v-bind:for="'addedMarketNameInput' + index" class="form-label"><strong>{{item.name}}</strong></label>
						<input type="text" class="form-control" v-bind:id="'addedMarketNameInput' + index" v-bind:readonly="item.readOnly" v-model="item.value">
					</div>

					<div class="d-grid gap-2 d-md-flex justify-content-md-end">
						<button type="button" class="btn btn-primary" data-bs-dismiss="modal"
							v-on:click="setTickerInfo()">Сохранить изменения</button>
					</div>
				</div>
				<div class="tab-pane fade" id="quotesInfoTab" role="tabpanel">
					Информация о котировках
				</div>
				<div class="tab-pane fade" id="quotesProviderTab" role="tabpanel">
					Источник котировок
				</div>
				<div class="tab-pane fade" id="loadFromFileTab" role="tabpanel">
					Загрузка котировок из файла
				</div>
			</div>

		</template>

