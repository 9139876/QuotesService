@{
	Layout = null;
}
<!doctype html>
<html>

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width">
	<title>Менеджер котировок</title>
</head>

<body>
	<div>
		@* Header *@
		<div>
			<h2>Header</h2>
		</div>

		@* Body *@
		<div class="container">
			<ul class="nav nav-tabs" id="myTab" role="tablist">
				<li class="nav-item">
					<button class="nav-link" data-bs-toggle="tab" data-bs-target="#marketsTab" type="button" role="tab"
						aria-selected="false">Рынки и инструменты</button>
				</li>
				<li class="nav-item">
					<button class="nav-link" data-bs-toggle="tab" data-bs-target="#shedulesTab" type="button" role="tab"
						aria-selected="false">Расписания получения котировок</button>
				</li>
			</ul>
			<div class="tab-content" id="myTabContent">
				<div class="tab-pane fade" id="marketsTab" role="tabpanel">
					@await Html.PartialAsync("~/Views/QuotesGetter/Main.cshtml")
				</div>
				<div class="tab-pane fade" id="shedulesTab" role="tabpanel">
					...
				</div>
			</div>
		</div>

		@* Footer *@
		<div class="position-absolute bottom-0 start-0">
			<h2>Footer</h2>
		</div>
	</div>

	<link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />

	<script src="~/js/lib/axios.min.js" asp-append-version="true"></script>
	<script src="~/js/lib/vue.min.js" asp-append-version="true"></script>
	<script src="~/js/lib/bootstrap.min.js" asp-append-version="true"></script>
</body>

</html>